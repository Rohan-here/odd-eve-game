<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="login&register.css">
    <link rel="stylesheet" href="allStyles.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <nav>
        <div class="logo">
            <h4 class="font-bold">BICE<span>.com</span></h4>
        </div>
        <ul class=" nav-links">
            <li><A href="/home">Home</A></li>
            <li><A href="/dev">Developers</A></li>
            <li><A href="/login">Login</A></li>
        </ul>
        <button class="navbutton" onclick="shownav()" style="color:white; font-size: 35px;">&#9776</button>

    </nav>
    <div class="mobilebar">
        <div class="newnav" id="newnav">
            <A href="/home">Home</A>
            <A href="/dev">Developers</A>
            <% if(!currentUser) { %>
                <A href="/login">Login</A>
                <% } else {%>
                    <a href="/playerActive">
                        <%= currentUser.username %>
                    </a>
                    <% } %>
        </div>
    </div>
    <div class="body">
        <% if(messages.length!=0) {%>
            <div class="errorFlash">
                <span>
                    <%= messages %>
                </span>
            </div>
            <% } %>
                <div class="container">
                    <div class="title">Registration</div>
                    <div class="content">
                        <form action="/registerUser" method="POST">
                            <div class="user-details">

                                <div class="input-box">
                                    <label class="details" for="username">Username</label>
                                    <input type="text" placeholder="Enter your username" id="username" name="username"
                                        required>
                                </div>
                                <div class="input-box">
                                    <label class="details" for="email">Email</span>
                                        <input type="text" placeholder="Enter your email" id="email" name="email"
                                            required>
                                </div>

                                <div class="input-box">
                                    <span class="details">Password</span>
                                    <input type="password" placeholder="Enter your password" name="pswd" required>
                                </div>
                                <div class="input-box">
                                    <span class="details">Confirm Password</span>
                                    <input type="password" placeholder="Confirm your password" name="cpswd" required>
                                </div>
                            </div>


                            <button>Register
                            </button>

                        </form>
                    </div>
                </div>
    </div>
    <script>
        function shownav() {
            var x = document.getElementById("newnav");
            if (x.style.display == "none") {
                x.style.display = "flex";
            }
            else {
                x.style.display = "none";
            }
        }
    </script>
</body>

</html>